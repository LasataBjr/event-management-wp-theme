{
  "name": "custom-theme",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19"
  },
  "scripts": {
    "tailwind-watch": "tailwindcss -i ./tailwind/tailwind.css -o ./theme/style.css --config ./tailwind/tailwind.config.js --watch",
    "js-watch": "esbuild javascript/script.js --bundle --outfile=theme/js/script.js --watch",
    "dev": "concurrently \"npm run tailwind-watch\" \"npm run js-watch\"",
    "production": "tailwindcss -i ./tailwind/tailwind.css -o ./theme/style.css --config ./tailwind/tailwind.config.js --minify && esbuild javascript/script.js --bundle --minify --outfile=theme/js/script.js",
    "bundle": "zip -r custom-theme.zip theme -x \"*node_modules*\""
  }
}
